{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "../..",
    "paths": {
      "@ai16z/*": ["packages/*/src"]
    },
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true
  },
  "include": [
    "src/**/*.ts",
    "src/client.ts",
    "src/interactions.ts",
    "src/post.ts",
    "src/types.ts",
    "src/environment.ts",
    "src/rate-limiter.ts",
    "src/index.ts"
  ],
  "references": [{ "path": "../core" }]
}
