{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2021",
        "lib": ["ES2021", "DOM"],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "incremental": true,
        "preserveSymlinks": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "test_resources"
    ]
}
