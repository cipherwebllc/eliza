{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "dom"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "composite": true,
        "allowJs": true,
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}
