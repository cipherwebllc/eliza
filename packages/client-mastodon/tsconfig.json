{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "../..",
    "paths": {
      "@ai16z/*": ["packages/*/src"]
    },
    "moduleResolution": "node16",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../core" }]
}
