{
    "compilerOptions": {
        "target": "ES2021",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "composite": true,
        "paths": {
            "@ai16z/*": ["packages/*/src"]
        }
    },
    "include": ["packages/*/src/**/*"],
    "references": [
        { "path": "./packages/core" },
        { "path": "./packages/client-bluesky" },
        { "path": "./packages/client-mastodon" },
        { "path": "./packages/client-misskey" }
    ]
}
